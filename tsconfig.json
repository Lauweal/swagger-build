{
  "compileOnSave": false,
  "compilerOptions": {
    "preserveSymlinks": true,
    "composite": true,
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declarationMap": true,
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "strictNullChecks": true,
    "types": [
      "node",
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "**/build",
    "node_modules",
    "**/node_modules",
    "**/coverage",
    "**/*.spec.ts",
    "**/test",
    "**/__tests__",
    "**/*.test.ts"
  ]
}